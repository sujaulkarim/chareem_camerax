<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:layoutDirection="ltr">

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/photo_view_pager" />

    <RelativeLayout
        android:id="@+id/cutout_safe_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            app:tint="@android:color/white"
            android:id="@+id/back_button"
            android:contentDescription="@string/back_button_alt"
            android:layout_marginStart="@dimen/margin_xsmall"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="@dimen/round_button_small"
            android:layout_height="@dimen/round_button_small"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_back" />

        <ImageButton
            android:layout_alignParentEnd="true"
            app:tint="@android:color/white"
            android:id="@+id/share_button"
            android:contentDescription="@string/share_button_alt"
            android:layout_marginEnd="@dimen/margin_xsmall"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_width="@dimen/round_button_small"
            android:layout_height="@dimen/round_button_small"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_share" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_small"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_marginEnd="@dimen/margin_xsmall"
                android:layout_marginStart="@dimen/margin_xsmall"
                android:id="@+id/close_button"
                android:contentDescription="@string/share_button_alt"
                android:layout_width="@dimen/round_button_smedium"
                android:layout_height="@dimen/round_button_smedium"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_close" />

            <ImageButton
                android:layout_marginEnd="@dimen/margin_xsmall"
                android:layout_marginStart="@dimen/margin_xsmall"
                android:id="@+id/delete_button"
                android:contentDescription="@string/delete_button_alt"
                android:layout_width="@dimen/round_button_smedium"
                android:layout_height="@dimen/round_button_smedium"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                app:tint="@android:color/white"
                app:srcCompat="@drawable/ic_delete" />

            <ImageButton
                android:layout_marginEnd="@dimen/margin_xsmall"
                android:layout_marginStart="@dimen/margin_xsmall"
                android:id="@+id/save_button"
                android:contentDescription="@string/delete_button_alt"
                android:layout_width="@dimen/round_button_smedium"
                android:layout_height="@dimen/round_button_smedium"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_check" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

</RelativeLayout>
